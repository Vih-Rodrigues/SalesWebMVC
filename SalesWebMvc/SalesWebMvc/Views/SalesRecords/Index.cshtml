@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row mb-4">
    <!-- Simple Search -->
    <div class="col-md-6">
        <form class="form-inline" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group mb-2">
                    <label for="minDate" class="mr-2">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="maxDate" class="mr-2">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </fieldset>
        </form>
    </div>
    <!-- Simple Search -->
    <div class="col-md-6">
        <form class="form-inline" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="form-group mb-2">
                    <label for="minDate" class="mr-2">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="maxDate" class="mr-2">Max Date</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </fieldset>
        </form>
    </div>
</div>